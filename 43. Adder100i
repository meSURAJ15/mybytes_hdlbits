module top_module( 
    input [99:0] a, b,
    input cin,
    output [99:0] cout,
    output [99:0] sum
);
    
    add a0 (a[0], b[0], cin, sum[0], cout[0]);
    
    genvar i;
    generate
        for (i = 1; i < 100; i = i + 1) begin : adder_chain
            add ai (a[i], b[i], cout[i-1], sum[i], cout[i]);
        end
    endgenerate
    
endmodule

// Full-adder module
module add (
    input in1, in2, ci,
    output s, co
);
    assign s = in1 ^ in2 ^ ci;
    assign co = (in1 & in2) | (ci & (in1 ^ in2));
endmodule
